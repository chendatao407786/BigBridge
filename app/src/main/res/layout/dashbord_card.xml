<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    app:cardElevation="2dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <include
        android:id="@+id/textBlock"
        layout="@layout/dashbord_text_block"
        android:layout_gravity="center_vertical"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content" />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_gravity="end">
        <include
            android:id="@+id/progressBar"
            android:layout_width="@dimen/small_progress_bar"
            android:layout_height="wrap_content"
            layout="@layout/circle_progressbar"
            android:layout_toEndOf="@+id/progressBarDistance"
            android:layout_margin="10dp"
            android:layout_gravity="center_vertical"/>
        <TextView
            android:id="@+id/completedPercent"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:text="30%"
            android:layout_gravity="end"
            android:gravity="center"
            android:fontFamily="@font/roboto_light"
            android:textSize="30dp"
            android:textStyle="bold"
            android:textColor="#E7E6E4"/>
    </LinearLayout>
</android.support.v7.widget.CardView>